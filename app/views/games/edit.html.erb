<h3>Edit <%= @game.title %></h3>

<%= form_for @game do |f| %>
  <div>
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
  <br>
  <div>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </div>
  <br>
  <div>
    <%= f.label :number_of_players%>
    <%= f.number_field :number_of_players%>
  </div>
  <br>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "Select Category" %>
  </div>

  <%= f.submit "Edit Game" %>
<% end %>