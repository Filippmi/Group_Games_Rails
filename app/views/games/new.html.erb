<h1> Save a Game </h1>

<%= form_for @game do |f| %>
  <div>
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
  <br>
  <div>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </div>
  <br>
  <div>
    <%= f.label :number_of_players%>
    <%= f.number_field :number_of_players%>
  </div>
  <br>

  <%= f.submit "Save Game" %>
<% end %>