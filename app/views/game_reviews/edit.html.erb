<h3>Edit <%= "#{current_user.username}'s review of #{@g_r.game.title}" %></h3>

<%= form_for [@game, @g_r] do |f| %>
  <%= f.label :review %>
  <%= f.text_area :content %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.hidden_field :game_id %>
  <%= f.submit "Edit Review" %>
<% end %>